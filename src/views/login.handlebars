<div class="box">
    <h1>Login</h1>
    <hr>

    <form class="box" method="post" action="/api/sessions/login">

        <label for="email">Email</label>
        <input type="email" name="email" id="email" autocomplete="current-email">

        <label for="password">Password</label>
        <input type="password" name="password" id="password" autocomplete="current-password">

        <button type="submit">Login</button>
    </form>
    <div>
        <a href="/api/sessions/github"><button>Entrar con Github</button></a>
    </div>
    <br>
    <p>¿No tienes una cuenta?</p>
    <span><a href="/register" target="_self">Registrate aquí</a></span>
</div>

{{#if loginFailed}}
    <script type="text/javascript">
        alert('Login Failed!');
    </script>
{{/if}}

{{#if registerSuccess}}
    <script>
        alert('Register Success!')
    </script>
{{/if}}